<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/image_open"
    tools:context="com.baidu.idl.face.main.activity.start.StartActivity">

    <TextureView
        android:id="@+id/check_rgb_texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0" />

    <TextureView
        android:id="@+id/check_nir_texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0" />

    <TextView
        android:layout_marginBottom="@dimen/start_10"
        android:layout_above="@+id/start_offTv"
        android:id="@+id/start_titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/string_baidu"
        android:textColor="@color/blue"
        android:textSize="@dimen/start_title"/>
    <TextView
        android:textSize="@dimen/bottom_font"
        android:id="@+id/start_offTv"
        android:layout_marginBottom="@dimen/start_77"
        android:layout_above="@+id/start_brainTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="开       启       离       线       刷       脸       之       旅"
        android:textColor="@color/start_blue"/>
    <TextView
        android:textSize="@dimen/bottom_font"
        android:id="@+id/start_brainTv"
        android:layout_marginBottom="@dimen/start_15"
        android:textColor="@color/attribute_title"
        android:text="@string/bottom_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <RelativeLayout
        android:id="@+id/progress_group"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="#50000000">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:text="人脸库加载中"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar_bg" />

            <TextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>
